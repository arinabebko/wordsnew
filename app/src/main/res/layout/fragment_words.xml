<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#211B20">

    <!-- ProgressBar для индикации загрузки -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Текст прогресса -->
    <TextView
        android:id="@+id/progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:textColor="#e7b5a9"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp" />

    <!-- ViewPager2 для карточек слов -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="16dp" />

    <!-- Layout для кнопок управления - ПОДНЯТ ВЫШЕ -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/backButton"
        android:layout_marginBottom="30dp"
    android:paddingHorizontal="40dp">

        <!-- Кнопка "Повторить" (розовый градиент с крестиком) -->
        <ImageButton
            android:id="@+id/reviewButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_outline_arrow_top_left"
        android:background="@drawable/button_pink_gradient"
        android:contentDescription="Повторить позже"
        android:layout_marginEnd="40dp" />

        <!-- Кнопка "Выучено" (синий градиент с галочкой) -->
        <ImageButton
            android:id="@+id/learnedButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_check"
        android:background="@drawable/button_blue_gradient"
        android:contentDescription="Выучено"
        android:layout_marginStart="40dp" />

    </LinearLayout>

    <!-- Кнопка назад -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="#e7b5a9"
        android:contentDescription="Назад"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="35dp" />

</androidx.constraintlayout.widget.ConstraintLayout>