<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#322b36"
        android:padding="24dp">

        <!-- Звезда в правом верхнем углу -->
        <ImageButton
            android:id="@+id/starButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_star"
        android:background="@android:color/transparent"
        android:contentDescription="Избранное"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"/>

        <!-- Карточка -->
        <LinearLayout
            android:id="@+id/wordCard"
            android:layout_width="320dp"
            android:layout_height="350dp"
            android:orientation="vertical"
            android:background="@drawable/card_pastel_bg"
            android:gravity="center"
            android:elevation="4dp"
            android:layout_centerInParent="true"
            android:padding="16dp">

            <TextView
                android:id="@+id/wordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="spring"
                android:textColor="#625fba"
                android:textSize="40sp"
                android:fontFamily="@font/jura_font_wght"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/hintText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="примечание к слову"
                android:textColor="#babba9"
                android:textSize="16sp"
                android:fontFamily="@font/jura_font_wght"
                android:layout_marginTop="26dp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <!-- Кнопка назад в левом нижнем углу -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_back"
            android:background="@drawable/back_button_bg"
            android:contentDescription="Назад"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="28dp"
            android:layout_marginStart="8dp"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>