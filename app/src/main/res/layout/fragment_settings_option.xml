<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#211B20"
    android:padding="24dp">

    <!-- Заголовок -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Настройки профиля"
        android:textSize="28sp"
        android:textColor="#8CA0FF"
        android:fontFamily="@font/jura_font_wght"
        android:layout_marginBottom="32dp"
        android:layout_gravity="center" />

    <!-- Карточка с настройками -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#3C374A"
        android:padding="24dp"
        android:elevation="4dp"
        android:clipToOutline="true"
        android:backgroundTintMode="src_in"
        android:backgroundTint="#4A445C">

        <!-- Текущее имя пользователя -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Текущее имя:"
            android:textColor="#A2B2FF"
            android:textSize="16sp"
            android:fontFamily="@font/jura_font_wght"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/currentUsernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Имя пользователя"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="@font/jura_font_wght"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Разделитель -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#554A445C"
            android:layout_marginBottom="24dp" />

        <!-- Поле для изменения имени -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Новое имя:"
            android:textColor="#A2B2FF"
            android:textSize="16sp"
            android:fontFamily="@font/jura_font_wght"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/newUsernameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите новое имя"
            android:textColor="#FFFFFF"
            android:textColorHint="#A2B2FF"
            android:textSize="16sp"
            android:minHeight="48dp"
            android:backgroundTint="#5539D0"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Имя может содержать буквы, цифры и нижнее подчеркивание"
            android:textColor="#A2B2FF"
            android:textSize="12sp"
            android:fontFamily="@font/jura_font_wght"
            android:layout_marginBottom="24dp" />

        <!-- Кнопка сохранения -->
        <Button
            android:id="@+id/saveUsernameButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сохранить имя"
            android:textColor="#FFFFFF"
            android:backgroundTint="#5539D0"
            android:fontFamily="@font/jura_font_wght"
            android:layout_marginBottom="32dp" />

        <!-- Разделитель -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#554A445C"
            android:layout_marginBottom="24dp" />

        <!-- Другие настройки (можно добавить позже) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Другие настройки"
            android:textColor="#A2B2FF"
            android:textSize="18sp"
            android:fontFamily="@font/jura_font_wght"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Уведомления (чекбокс) -->

        <!-- Язык интерфейса -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Язык интерфейса"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="@font/jura_font_wght" />

            <TextView
                android:id="@+id/languageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Русский"
                android:textColor="#A2B2FF"
                android:textSize="16sp"
                android:fontFamily="@font/jura_font_wght"
                android:padding="8dp"
                android:background="#5539D0"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Тема -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Тема"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="@font/jura_font_wght" />

            <TextView
                android:id="@+id/themeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Темная"
                android:textColor="#A2B2FF"
                android:textSize="16sp"
                android:fontFamily="@font/jura_font_wght"
                android:padding="8dp"
                android:background="#5539D0"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>

    <!-- Кнопка назад -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Назад"
        android:textColor="#8CA0FF"
        android:backgroundTint="@android:color/transparent"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/jura_font_wght" />

</LinearLayout>