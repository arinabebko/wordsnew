<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#211B20"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_settings_tv_title"
        android:textSize="28sp"
        android:textColor="#8CA0FF"
        android:fontFamily="@font/jura_font_wght"
        android:layout_marginBottom="32dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#3C374A"
        android:padding="24dp"
        android:elevation="4dp"
        android:clipToOutline="true"
        android:backgroundTintMode="src_in"
        android:backgroundTint="#4A445C">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_settings_tv_current_name_label"
            android:textColor="#A2B2FF"
            android:textSize="16sp"
            android:fontFamily="@font/jura_font_wght"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/currentUsernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_settings_tv_username_placeholder"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="@font/jura_font_wght"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#554A445C"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_settings_tv_new_name_label"
            android:textColor="#A2B2FF"
            android:textSize="16sp"
            android:fontFamily="@font/jura_font_wght"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/newUsernameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/profile_settings_et_new_name_hint"
            android:textColor="#FFFFFF"
            android:textColorHint="#A2B2FF"
            android:textSize="16sp"
            android:minHeight="48dp"
            android:backgroundTint="#5539D0"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_settings_tv_name_rules"
            android:textColor="#A2B2FF"
            android:textSize="12sp"
            android:fontFamily="@font/jura_font_wght"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/saveUsernameButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_settings_btn_save"
            android:textColor="#FFFFFF"
            android:backgroundTint="#5539D0"
            android:fontFamily="@font/jura_font_wght"
            android:layout_marginBottom="32dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#554A445C"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_settings_tv_others_title"
            android:textColor="#A2B2FF"
            android:textSize="18sp"
            android:fontFamily="@font/jura_font_wght"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/profile_settings_tv_ui_lang_label"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="@font/jura_font_wght" />

            <TextView
                android:id="@+id/languageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_settings_tv_ui_lang_current"
                android:textColor="#A2B2FF"
                android:textSize="16sp"
                android:fontFamily="@font/jura_font_wght"
                android:padding="8dp"
                android:background="#5539D0"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/profile_settings_tv_theme_label"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="@font/jura_font_wght" />

            <TextView
                android:id="@+id/themeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_settings_tv_theme_current"
                android:textColor="#A2B2FF"
                android:textSize="16sp"
                android:fontFamily="@font/jura_font_wght"
                android:padding="8dp"
                android:background="#5539D0"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common_back_upper"
        android:textColor="#8CA0FF"
        android:backgroundTint="@android:color/transparent"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/jura_font_wght" />

</LinearLayout>