<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/a">

        <!-- Первая строка: название и переключатель -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/libraryName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Название библиотеки"
                android:textColor="#D9D8FF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/librarySwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="40dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:background="?attr/selectableItemBackgroundBorderless" />

        </LinearLayout>

        <!-- Описание -->
        <TextView
            android:id="@+id/libraryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Описание библиотеки"
            android:textColor="#D9D8FF"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <!-- Вторая строка: детали и кнопки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <!-- Контейнер для тегов -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!-- Количество слов -->
                <TextView
                    android:id="@+id/libraryWordCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500 слов"
                    android:textColor="#625fba"
                    android:textSize="12sp"
                    android:background="@drawable/tag_bg"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp" />

                <!-- Категория -->
                <TextView
                    android:id="@+id/libraryCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Базовый"
                    android:textColor="#625fba"
                    android:textSize="12sp"
                    android:background="@drawable/tag_bg"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Контейнер для кнопок -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Кнопка информации -->
                <ImageButton
                    android:id="@+id/infoButton"
                    android:layout_width="48dp"
                    android:layout_height="40dp"
                    app:tint="@color/white"                    android:src="@drawable/ic_info"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Информация"
                    android:layout_marginEnd="8dp" />


                <!-- Кнопка управления (только для пользовательских библиотек) -->
                <ImageButton
                    android:id="@+id/manageButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_edit"
                    app:tint="@color/white"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Управление"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>