<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#322b36"
    android:padding="24dp"
    android:gravity="center">

    <!-- Заголовок -->
    <TextView
        android:id="@+id/notificationsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="уведомления"
        android:textSize="20sp"
        android:textColor="#b5b5e7"
        android:fontFamily="@font/jura_font_wght"
        android:layout_marginBottom="24dp"/>

    <!-- Радиогруппа с вариантами -->
    <RadioGroup
        android:id="@+id/notificationOptionsGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="без уведомлений"
            android:textColor="#e7b5a9"
            android:fontFamily="@font/jura_font_wght"
            android:textSize="16sp"
            android:buttonTint="#e7b5a9"
            android:padding="8dp"/>

        <RadioButton
            android:id="@+id/rb_onceADay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="раз в день"
            android:textColor="#fcb6b0"
            android:fontFamily="@font/jura_font_wght"
            android:textSize="16sp"
            android:buttonTint="#fcb6b0"
            android:padding="8dp"/>

        <!-- Лейаут для напоминания со временем -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/reminderLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="напоминание в"
                android:textColor="#e7b5a9"
                android:fontFamily="@font/jura_font_wght"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/reminderTimeEditText"
                android:layout_width="72dp"
                android:layout_height="48dp"
            android:minHeight="48dp"
            android:inputType="time"
            android:text="19:00"
            android:textColor="#322b36"
            android:background="#fcb6b0"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/jura_font_wght"
            />

        </LinearLayout>

        <RadioButton
            android:id="@+id/rb_afterInactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="через 1 день бездействия"
            android:textColor="#e7b5a9"
            android:fontFamily="@font/jura_font_wght"
            android:textSize="16sp"
            android:buttonTint="#e7b5a9"
            android:padding="8dp"/>
    </RadioGroup>

</LinearLayout>
