<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#211B20"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:id="@+id/notificationsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notif_settings_header"
        android:textSize="20sp"
        android:textColor="#b5b5e7"
        android:fontFamily="@font/jura_font_wght"
        android:layout_marginBottom="24dp"/>

    <RadioGroup
        android:id="@+id/notificationOptionsGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notif_settings_rb_none"
            android:textColor="#e7b5a9"
            android:fontFamily="@font/jura_font_wght"
            android:textSize="16sp"
            android:buttonTint="#e7b5a9"
            android:padding="8dp"/>

        <RadioButton
            android:id="@+id/rb_onceADay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notif_settings_rb_once_a_day"
            android:textColor="#fcb6b0"
            android:fontFamily="@font/jura_font_wght"
            android:textSize="16sp"
            android:buttonTint="#fcb6b0"
            android:padding="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/reminderLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notif_settings_tv_reminder_at"
                android:textColor="#e7b5a9"
                android:fontFamily="@font/jura_font_wght"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/reminderTimeEditText"
                android:layout_width="72dp"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:inputType="time"
                android:text="19:00"
                android:textColor="#211B20"
                android:background="#fcb6b0"
                android:gravity="center"
                android:padding="8dp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/jura_font_wght"
                android:imeOptions="actionDone"
                android:maxLength="5"
                android:digits="0123456789:"/>
        </LinearLayout>

        <RadioButton
            android:id="@+id/rb_afterInactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notif_settings_rb_inactivity"
            android:textColor="#e7b5a9"
            android:fontFamily="@font/jura_font_wght"
            android:textSize="16sp"
            android:buttonTint="#e7b5a9"
            android:padding="8dp"/>
    </RadioGroup>
</LinearLayout>