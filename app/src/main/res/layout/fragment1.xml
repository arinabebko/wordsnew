<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#211B20"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/loadingProgressBarr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="70dp">

            <TextView
                android:id="@+id/daysTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stats_streak_days"
                android:textSize="32sp"
                android:textColor="#fcb6b0"
                android:fontFamily="@font/jura_font_wght"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:paddingHorizontal="24dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats_in_progress"
                        android:textSize="16sp"
                        android:textColor="#A2B2FF"
                        android:fontFamily="@font/jura_font_wght" />

                    <TextView
                        android:id="@+id/wordsInProgressTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 0"
                        android:textSize="16sp"
                        android:textColor="#fcb6b0"
                        android:fontFamily="@font/jura_font_wght"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats_learned"
                        android:textSize="16sp"
                        android:textColor="#A2B2FF"
                        android:fontFamily="@font/jura_font_wght" />

                    <TextView
                        android:id="@+id/wordsLearnedTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 0"
                        android:textSize="16sp"
                        android:textColor="#fcb6b0"
                        android:fontFamily="@font/jura_font_wght"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/goodJobTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="let's\nstart!"
            android:textSize="36sp"
            android:textColor="#fcb6b0"
            android:fontFamily="@font/jura_font_wght"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="48dp" />

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/startButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="start"
                android:textSize="24sp"
                app:backgroundTint="@null"
                android:textColor="#211B20"
                android:background="@drawable/background_gradient"
                android:fontFamily="@font/jura_font_wght"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/loadingProgressBar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminateTint="#8CA0FF" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="#302631">

        <LinearLayout
            android:id="@+id/searchButtonLayout"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/status_background"
            android:padding="12dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_font_search"
                app:tint="#8CA0FF"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stats_btn_search"
                android:textSize="16sp"
                android:textColor="#A2B2FF"
                android:fontFamily="@font/jura_font_wght" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/addButtonLayout"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#302631"
            android:padding="12dp"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_font_plus"
                app:tint="#8CA0FF"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stats_btn_add"
                android:textSize="16sp"
                android:textColor="#A2B2FF"
                android:fontFamily="@font/jura_font_wght" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>