<?xml version="1.0" encoding="utf-8"?>



<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="16dp">

    <!-- ПОЛУПРОЗРАЧНЫЙ КВАДРАТ НА ЗАДНЕМ ПЛАНЕ -->
    <View
        android:layout_width="352dp"
        android:layout_height="386dp"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        android:alpha="0.2"
        android:background="@drawable/rounded_square"
        android:elevation="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/daysTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/jura_font_wght"
            android:text="здравствуй!"
            android:textColor="#5539D0"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:textColor="#372C2C"
            android:textColorHint="#2C3D4E" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:textColor="#372C2C"
            android:textColorHint="#2C3D4E" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Вход" />

        <!-- Ссылка на восстановление пароля (опционально) -->
        <!--
    <TextView
        android:id="@+id/forgotPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Забыли пароль?"
        android:textColor="#5539D0"
        android:textSize="14sp"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="16dp"/>
    -->

        <!-- Разделитель -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="#E0E0E0" />

        <!-- Ссылка на регистрацию -->
        <TextView
            android:id="@+id/registerLinkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:text="Нет аккаунта? Зарегистрироваться"
            android:textColor="#5539D0"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>